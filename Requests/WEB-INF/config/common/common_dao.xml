<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN"
    "http://www.springframework.org/dtd/spring-beans.dtd">

<beans>
	<bean id="commonDAO" class="com._4s_.common.dao.CommonDAOHibernate" >
		<property name="sessionFactory">
		      <ref bean="sessionFactory"/>
		</property>
	</bean>
	
	<bean id="queries" class="com._4s_.common.dao.Queries" >
		<property name="dataSource">
		      <ref bean="dataSource"/>
		</property>
	</bean>


<!-- this bean is not used anywhere, just the goal of it to inject dataSource static variable into DBUtils	-->
	<bean id="dbUtilsDataSourceInjector" class="com._4s_.common.util.DBUtils" >
		<property name="dataSource">
		      <ref bean="dataSource"/>
		</property>
	</bean>
	
	
</beans>
    