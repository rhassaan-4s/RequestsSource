<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN"
    "http://www.springframework.org/dtd/spring-beans-2.0.dtd">

<beans default-autowire="no" default-lazy-init="true">
	<bean id="commonDAO" class="com._4s_.common.dao.CommonDAOHibernate" lazy-init="true"  init-method="init">
		<property name="sessionFactory" ref="sessionFactory"/>
	</bean>
	
	<!-- <bean id="queries" class="com._4s_.common.dao.Queries" >
		<property name="dataSource" ref ="dataSource"/>
	</bean>
	 -->
	<bean id="queries" class="com._4s_.common.dao.Queries" >
		<property name="dataSource">
		      <ref bean="dataSource"/>
		</property>
		<property name="driverClass">
		      <value>${hibernate.connection.driver_class}</value>
		</property>
		<property name="url">
			<value>${hibernate.connection.url}</value>
		</property>
		<property name="username">
			<value>${hibernate.connection.username}</value>
		</property>
		<property name="password">
			<value>${hibernate.connection.password}</value>
		</property>
		<property name="schema">
			<value>${hibernate.defaultSchema}</value>
		</property>
	</bean>

<!-- this bean is not used anywhere, just the goal of it to inject dataSource static variable into DBUtils	-->
	<bean id="dbUtilsDataSourceInjector" class="com._4s_.common.util.DBUtils" >
		<property name="dataSource" ref ="dataSource"/>
	</bean>
	
